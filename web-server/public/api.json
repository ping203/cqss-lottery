{
  "web": [
    {
      "login": {
        "method": "post",
        "url": "/users/login",
        "body": {
          "username": {
            "type": "string",
            "required": true
          },
          "phone": {
            "type": "string",
            "required": true
          },
          "password": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    {
      "registe": {
        "method": "post",
        "url": "/users/register",
        "body": {
          "username": {
            "type": "string",
            "required": true
          },
          "phone": {
            "type": "string",
            "required": true
          },
          "password": {
            "type": "string",
            "required": true
          },
          "inviter": {
            "type": "string",
            "required": true
          },
          "email": {
            "type": "string",
            "required": false
          }
        }
      }
    },
    {
      "checkPhone": {
        "method": "post",
        "url": "/users/checkPhone",
        "body": {
          "phone": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    {
      "checkUser": {
        "method": "post",
        "url": "/users/checkUser",
        "body": {
          "username": {
            "type": "string",
            "required": true
          }
        }
      }
    }
  ],

  "game": [
    {
      "connect":{
        "router":"gate.gateHandler.connect",
        "msg":{
          "uid":{
            "type":"number",
            "required":true
          }
        }
      }
    },
    {

      "login":{
        "router":"connector.entryHandler.login",
        "msg":{
          "token":{
            "type":"string",
            "required":true
          }
        }
      }
    },{
      "logout":{
        "router":"connector.entryHandler.logout",
        "msg":{
          "token":{
            "type":"string",
            "required":true
          }
        }
      }
    },
    {
      "enterRoom": {
        "router":"chat.chatHandler.enterRoom",
        "msg":{
          "roomId":{
            "type":"string",
            "required":true
          }
        }
      }
    }, {
      "leaveRoom": {
        "router":"chat.chatHandler.leaveRoom",
        "msg":null
      }
    },{
      "getRooms": {
        "router":"chat.chatHandler.getRooms",
        "msg":null
      }
    },
    {
      "sendChatMsg": {
        "router":"chat.chatHandler.sendChatMsg",
        "msg":{
          "from":{
            "type":"string",
            "required":true
          },
          "target":{
            "type":"string",
            "required":true
          },
          "msgType":{
            "type":"number",
            "required":true
          },
          "content":{
            "type":"string",
            "required":true
          }
        }
      }
    },{
      "bet": {
        "router":"area.playerHandler.bet",
        "msg":{
          "betData":"1/223/100"
        }
      }
    },{
      "unBet": {
        "router":"area.playerHandler.unBet",
        "msg":{
          "entityId":100
        }
      }
    },{
      "myIncome": {
        "router":"area.playerHandler.myIncome",
        "msg":{
          "skip":10,
          "limit":10
        }
      }
    },{
      "friendIncome": {
        "router":"area.playerHandler.friendIncome",
        "msg":{
          "skip":10,
          "limit":10
        }
      }
    },{
      "setRoleName": {
        "router":"area.playerHandler.setRoleName",
        "msg":{
          "skip":10,
          "limit":10
        }
      }
    },{
      "setPinCode": {
        "router":"area.playerHandler.setImageId",
        "msg":{
          "skip":10,
          "limit":10
        }
      }
    }
  ]
}